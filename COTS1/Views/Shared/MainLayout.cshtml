@{
    ViewData["Title"] = "MainLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Quản Lý Công Việc</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/dist/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .Container {
            text-align: center;
        }

        body {
            font-family: 'Arial', sans-serif;
        }

        .sb-sidenav {
            background-color: #212529;
            user-select: none;
        }

            .sb-sidenav .nav-link {
                color: #adb5bd;
                padding: 8px 12px; /* Giảm padding để mục không quá cách xa nhau */
                margin: 4px 0; /* Giảm khoảng cách giữa các mục */
                display: flex; /* Đảm bảo icon và text trên cùng một dòng */
                align-items: center; /* Căn giữa icon và text theo chiều dọc */
                font-size: 14px
            }

                .sb-sidenav .nav-link:hover {
                    color: #fff;
                    background-color: #495057;
                }

        .sb-sidenav-menu-heading {
            color: #ced4da;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        .sb-topnav {
            background-color: #212529;
        }

            .sb-topnav .navbar-brand {
                font-size: 1.5rem;
                color: #fff;
            }

            .sb-topnav .nav-link {
                color: #adb5bd;
                width: 100%
            }

                .sb-topnav .nav-link:hover {
                    color: #fff;
                }

            .sb-topnav .dropdown-menu {
                background-color: #212529;
            }

                .sb-topnav .dropdown-menu a {
                    color: #fff;
                }

                    .sb-topnav .dropdown-menu a:hover {
                        color: black;
                        font-weight: bold;
                    }

        #layoutSidenav {
            padding-top: 20px;
        }

        #layoutSidenav_nav {
            padding-top: 20px;
        }
        /* Phần Container khi thanh bên mở */
        .container-expanded {
            transition: margin-left 0.3s;
            margin-left: 250px; /* Kích thước khi thanh bên mở */
        }

        /* Phần Container khi thanh bên thu vào */
        .container-collapsed {
            transition: margin-left 0.3s;
            margin-left: 0; /* Kích thước khi thanh bên thu vào */
        }

        .container-collapsed {
            transition: margin-left 0.3s;
            margin-left: 0; /* Kích thước khi thanh bên thu vào */
        }

        /* Phần thanh bên khi mở */
        .sb-sidenav-expanded {
            width: 250px; /* Kích thước khi mở */
            transition: width 0.3s;
        }

        /* Phần thanh bên khi thu vào */
        .sb-sidenav-collapsed {
            width: 0; /* Kích thước khi thu vào */
            transition: width 0.3s;
        }

        .sb-nav-link-icon {
            margin-right: px; /* Khoảng cách giữa icon và text */
            font-size: 1rem; /* Điều chỉnh kích thước icon để phù hợp với text */
        }
        .btnMenu {
        background-color: transparent; /* or your desired color */
        border: none; /* Remove default border */
        color: #007bff; /* Adjust color if needed */
     padding: 0.375rem 0.75rem; /* Match Bootstrap button padding */
        border-radius: 0.2rem; /* Match Bootstrap button border radius */
    transition: background-color 0.3s ease; /* Smooth background transition */
}

.btnMenu:hover {
    background-color: rgba(0, 123, 255, 0.1); /* Hover effect */
}
    </style>

</head>

<body class="sb-nav-fixed">
    
    @RenderBody()
    @RenderSection("Scripts", required: false)
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Sidebar Toggle -->
        <button class="btnMenu btn-link btn-sm order-1 order-lg-0 me-4" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Navbar Brand -->
        <a class="navbar-brand ps-3" asp-action="Index" asp-controller="Home">Quản Lý Công Việc</a>

        <!-- Navbar Items -->
        <div class="d-flex ms-auto">
            <!-- Sử dụng ms-auto để đẩy sang bên phải -->
            <a asp-action="Logout" asp-controller="Login" name="logout" class="btn btn-outline-info" style="margin-right:12px;">Logout</a>
        </div>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="sb-sidenav-menu-heading">   Quản Lý Dự Án</div>
                    <a asp-action="Index" asp-controller="ProjectManager" class="nav-link">
                        <div class="sb-nav-link-icon"><i class="bi bi-gear"></i></div>
                        Tạo và Quản Lý Dự Án
                    </a>
                    <a asp-action="TrackProgress" asp-controller="ListTask" class="nav-link">
                        <div class="sb-nav-link-icon"><i class="bi bi-eye"></i></div>
                        Theo Dõi Công Việc
                    </a>
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Quản Lý Nhiệm Vụ</div>
                        <a asp-action="Index" asp-controller="ListTask" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="bi bi-file-earmark-plus"></i></div>
                            Nhận Nhiệm Vụ
                        </a>
                        <a asp-action="ListRecivedTask" asp-controller="ListTask" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="bi bi-list-ul"></i></div>
                            Danh sách nhiệm vụ đã nhận
                        </a>

                        <div class="sb-sidenav-menu-heading">Gửi và Nhận Thông Báo Qua Email</div>
                        <a asp-action="SendNotification" asp-controller="Home" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="bi bi-bell"></i></div>
                            Gửi Thông Báo
                        </a>
                        
                        <a asp-action="Mail" asp-controller="Home" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="bi bi-envelope"></i></div>
                            Xem Mail<span style="margin-left:10px;" class="badge bg-danger">@ViewBag.SumEmail</span>
                        </a>
                       
                        
                        <div class="sb-sidenav-menu-heading"> Nhắc Nhở</div>
                      
                        <a asp-action="RemindTask" asp-controller="RemindTask" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="bi bi-alarm"></i></div>
                            Nhắc Nhở
                        </a>
            </nav>
        </div>

    </div>
    </div>

    </nav>
    </div>

    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const chartContainer = document.getElementById('chartContainer');
            const sidenav = document.getElementById('layoutSidenav_nav');

            sidebarToggle.addEventListener('click', function () {
                if (sidenav.classList.contains('sb-sidenav-expanded')) {
                    sidenav.classList.remove('sb-sidenav-expanded');
                    sidenav.classList.add('sb-sidenav-collapsed');
                    chartContainer.classList.remove('container-collapsed');
                    chartContainer.classList.add('container-expanded');

                } else {
                    sidenav.classList.remove('sb-sidenav-collapsed');
                    sidenav.classList.add('sb-sidenav-expanded');
                    chartContainer.classList.remove('container-expanded');
                    chartContainer.classList.add('ccontainer-collapsed');


                }
            });
        });
    </script>
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="js/sb-admin-2.min.js"></script>
    <script src="vendor/chart.js/Chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/src/assets/demo/chart-area-demo.js"></script>
    <script src="~/src/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/src/js/datatables-simple-demo.js"></script>
    <script src="~/src/js/scripts.js"></script>

</body>
</html>


