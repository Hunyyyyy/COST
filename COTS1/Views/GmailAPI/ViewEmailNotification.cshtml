@model EmailNotificationModel
@{
    ViewData["Title"] = "ViewEmailNotification";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<style>
    /* Hide emails beyond the top 5 */
    #Recipients label.hidden {
        display: none;
    }

    /* General container adjustments */
    .Container {
        margin-top: 60px;
        width: 100%;
    }

    .container-expanded {
        margin-top: 60px;
        width: 80%;
    }

    /* Form Card styling */
    .form-section {
        background: linear-gradient(135deg, #f9f9f9 0%, #e3f2fd 100%);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .form-section:hover {
            box-shadow: 0px 20px 30px rgba(0, 0, 0, 0.2);
        }

        .form-section h2 {
            font-weight: 700;
            color: #1565c0;
            text-align: center;
            margin-bottom: 20px;
        }

    /* Input and label adjustments */
    .form-label {
        font-weight: 500;
        color: #1565c0;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #b3e5fc;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #64b5f6;
            box-shadow: 0 0 8px rgba(100, 181, 246, 0.5);
        }

    /* Button styling */
    .btn-primary {
        background-color: #1565c0;
        border: none;
        font-size: 18px;
        padding: 12px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0d47a1;
            box-shadow: 0 4px 10px rgba(13, 71, 161, 0.3);
        }

    /* Modal header design */
    .modal-header {
        background-color: #1565c0;
        color: white;
        border-bottom: none;
    }

    .modal-footer {
        border-top: none;
    }
</style>

@if (@TempData["Message"] != null)
{
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title" id="modalLabel">Thông báo!!</h4>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    @TempData["Message"]
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
}

<div class="Container container-expanded" id="chartContainer">
    <div class="form-section">
        <h2>Send Email Notification</h2>
        <form>
            <div class="mb-4">
                <label for="from" class="form-label">From</label>
                <input type="text" class="form-control" id="from" name="from" value="@ViewBag.UserEmail" readonly />
            </div>
            <div class="mb-4">
                <label for="to" class="form-label">To</label>
                <input type="text" class="form-control" id="recipients" name="recipients" placeholder="Nhập địa chỉ email người nhận" required>
            </div>
            <div class="mb-4">
                <label for="subject" class="form-label">Subject</label>
                <input type="text" class="form-control" id="subject" name="subject" placeholder="Nhập chủ đề" required>
            </div>
            <div class="mb-4">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="message" rows="5" placeholder="Nhập tin nhắn của bạn ở đây" required></textarea>
            </div>
            <div class="d-grid gap-2">
                <button asp-action="EmailNotification" asp-controller="GmailAPI" type="submit" class="btn btn-primary btn-lg">Send Email</button>
            </div>
        </form>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function () {
        var myModal = new bootstrap.Modal(document.getElementById('myModal'), {
            keyboard: false
        });
        myModal.show();
    });
</script>
